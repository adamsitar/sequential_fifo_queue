---
Checks:
- -*
- clang-analyzer-*
- clang-diagnostic-*
- cppcoreguidelines-*
- modernize-*
- performance-*
- readability-*
- bugprone-*
- cert-*
- google-readability-braces-around-statements
# removed
- -modernize-use-trailing-return-type
- -cppcoreguidelines-pro-type-reinterpret-cast
- -cppcoreguidelines-avoid-magic-numbers
- -readability-magic-numbers
- -readability-identifier-length
UseColor: true
WarningsAsErrors: '' # '*' would treat all warnings as errors
# restrict checks to src, avoid noise from third-party libraries
HeaderFilterRegex: 'src/.*'  
# will match the style defined in .clang-format
FormatStyle: file 
ExtraArgs: 
  - -std=c++23
